#lang racket

(require racket/match
         (for-syntax syntax/parse)
         syntax/parse))

(define-syntax (match-let/loop stx)
  (define-syntax-class binder
    (pattern [pat:expr val:expr]))
  (syntax-parse 
   [(match-let/loop point:id
                    [binder ...]
                    body:expr ...)]
   
   
   
   
   
  